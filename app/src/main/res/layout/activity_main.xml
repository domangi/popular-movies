<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.domenicoangilletta.popularmovies.MainActivity"
    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sorted_by"
            android:textSize="@dimen/info_message_text_size"
            android:text=""
            android:textAlignment="center"
            android:padding="@dimen/info_message_padding"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorAccent"
            tools:text="Sorted by Popularity"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_movies"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/movies_grid_margin_top"
            ></android.support.v7.widget.RecyclerView>
</FrameLayout>
